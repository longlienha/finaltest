@model IEnumerable<WebApplication2.Models.customer>
@{
    ViewBag.Title = "Index";
    int no = 0;
}

<h2 style="float:left">Index</h2>
<a href="/Admin/Customer/Insert"><button type="button" class="btn btn-primary" style="float:right;margin-top:20px;">Insert Customer</button></a>
@using (@Html.BeginForm())
{
    <form>
        <button type="submit" class="btn btn-primary" style="float: right ;margin-top: 20px; margin-right: 15px;">Submit</button>
        <input type="text" class="form-control" id="Name" name="keyword" placeholder="Search Name" style="float: right;margin-top: 20px">
    </form>
}

<table class="table-bordered table-responsive table">
    <tr>
        <th>No</th>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Action</th>

    </tr>

    @foreach (var item in Model)
    {
        no = no + 1;

        <tr>
            <td>@no</td>
            <td>@item.name</td>
            <td>@item.adress</td>
            <td>@item.phone</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>